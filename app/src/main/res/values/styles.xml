<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/holderColor</item>
        <item name="android:windowDisablePreview">true</item>

        <item name="android:textColorPrimary">@color/primaryText</item>
        <item name="android:textColorPrimaryInverse">@color/holderColor</item>

        <item name="android:textColorSecondaryInverse">@android:color/transparent</item>
        <item name="android:textColorSecondary">@color/tertiaryText</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:textColorHighlight">@color/colorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:background">@color/holderColor</item>
    </style>

    <style name="SelectedCheckbox">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTitleStyle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/toolbar_title_size</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/holderColor</item>
        <item name="android:background">@color/holderColor</item>
    </style>

    <style name="ToolbarTitleStyleBlue" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textSize">@dimen/toolbar_title_size</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@color/holderColor</item>
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="CustomProgressDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="warningToast">
        <item name="stTextBold">true</item>
        <item name="stFont">@font/light_font</item>
        <item name="stTextColor">@color/holderColor</item>
        <item name="stTextSize">@dimen/txt_normal</item>
        <item name="stColorBackground">@color/error</item>
        <item name="stSolidBackground">true</item>
        <item name="stIconStart">@drawable/ic_warning</item>
        <item name="stLength">SHORT</item>
        <item name="stRadius">@dimen/twenty_eight</item>
    </style>

    <style name="successToast">
        <item name="stTextBold">true</item>
        <item name="stFont">@font/light_font</item>
        <item name="stTextColor">@color/holderColor</item>
        <item name="stTextSize">@dimen/txt_normal</item>
        <item name="stColorBackground">@color/success</item>
        <item name="stSolidBackground">true</item>
        <item name="stLength">SHORT</item>
        <item name="stIconStart">@drawable/ic_tick</item>
        <item name="stRadius">@dimen/twenty_eight</item>
    </style>
</resources>